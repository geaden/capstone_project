<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.AppTheme" />

    <style name="AppTheme.OverlapSystemBar" parent="Base.AppTheme" />

    <!-- Base application theme. -->
    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="StoryInfoText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingTop">@dimen/story_info_text_padding</item>
        <item name="android:paddingBottom">@dimen/story_info_text_padding</item>
    </style>

    <style name="AboutLink" parent="">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:paddingStart">@dimen/content_padding_dialog</item>
        <item name="android:paddingEnd">@dimen/content_padding_dialog</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
</resources>
